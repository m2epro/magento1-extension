    <?php foreach (Mage::helper('M2ePro/Magento')->getConflictedModules() as $module => $data) : ?>

        <tr>
            <td class="label">
                <label><?php echo $module; ?>: </label>
                <?php if (!empty($data['description'])) { ?>
                    <p class="note" style="color: grey">
                        <span><?php echo Mage::helper('M2ePro')->__($data['description']); ?></span>
                    </p>
                <?php } ?>
            </td>
            <td class="value">
                <?php if ($data['active']) { ?>
                    <span class="red"><b>Enabled</b></span>
                <?php } else { ?>
                    <span><b>Disabled</b></span>
                <?php } ?>
            </td>
            <td class="value">
                <?php echo isset($data['codePool']) ? $data['codePool'] : '-'; ?>
            </td>
            <td class="value">
                <?php echo isset($data['version']) ? $data['version'] : '-'; ?>
            </td>
        </tr>

    <?php endforeach; ?>

</table>