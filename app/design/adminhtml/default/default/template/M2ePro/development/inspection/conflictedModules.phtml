<table class="form-list" cellspacing="0" cellpadding="0">

    <tr>
        <td class="label" style="width:300px;">
            <strong><?php echo Mage::helper('M2ePro')->__('Module'); ?></strong>
        </td>
        <td class="value" style="width:150px;">
            <strong><?php echo Mage::helper('M2ePro')->__('Status'); ?></strong>
        </td>
        <td class="value" style="width:150px;">
            <strong><?php echo Mage::helper('M2ePro')->__('Code Pool'); ?></strong>
        </td>
        <td class="value" style="width:150px;">
            <strong><?php echo Mage::helper('M2ePro')->__('Version'); ?></strong>
        </td>
